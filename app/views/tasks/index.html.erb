<h1>Tasks</h1>
<p><%= link_to "New Task", new_task_path %></p>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.completed? ? "✅" : "⬜️" %>
      <%= link_to task.title, task_path(task) %>
    <%= link_to "Editar", edit_task_path(task) %>
    <%= link_to "Remover", task_path(task),
      data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" } %>
    </li>
  <% end %>
</ul>
